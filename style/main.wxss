/* common */
.color-black {
	color: black;
}
.pull-left {
  float: left;
}
.pull-right {
  float: right;
}
.text-center {
  text-align: center;
}
.inline-block {
  display: inline-block;
}
.text-muted {
    color: #999999;
}
.text-left {
	text-align: left;
}
.text-single-line {
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	word-wrap: normal;
	word-wrap: break-word;
	word-break: break-all;
}

.list-icon-box {
	width: 40px;
	height: 40px;
	margin-right: auto;
	margin-left: auto;
	background-color: #53cac3;
	border-radius: 50%;
}
.list-icon-box.squre {
	width:60px;
	height:50px;
	border-radius:0;
	padding-top:10px;
}
.list-icon {
	width: 26px;
	height: 26px;
	margin-right: auto;
	margin-left: auto;
	/*margin-bottom: -3px;*/
	display: block;
	padding-top: 7px;
	-webkit-filter: opacity(70%); /* Safari */
    filter: opacity(70%);
}

/* tabbar */
.tabbar {
	position: fixed;
	bottom: 0;
	width: 100%;
	background: white;
	text-align: center;
	height:44px;
	background-color:#f2f2f2;
	border-top:1px solid #e6e6e6;
}
.tabbar-item-4 {
	width: 25%;
	position: relative;
	height: 100%;
	display: inline-block;
}

.tabbar-item-inner {
	width: 100%;
	height: 100%;
	/*padding: 2px 10px;*/
	padding:2px 0;
	text-align: center;
	position: absolute;
}
.tabbar-text {
	font-size: 0.7em;
	display: block;
	-webkit-filter: opacity(60%); /* Safari */
    filter: opacity(60%);
}
.tabbar-item-img {
	width: 30px;
	height: 30px;
	margin-right: auto;
	margin-left: auto;
	margin-bottom: -3px;
	display: block;
	-webkit-filter: opacity(60%); /* Safari */
    filter: opacity(60%);
}
/*style for post button in the middle*/
.tabbar-img-middle {
	width: 40px;
	height: 40px;
	margin-left: -20px;
	/*margin-top: 2px; */
	background-color:#53cac3;
	border-radius:5px;
	position: absolute;
}

/* images selector */
.images-wrapper {
  padding: 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.images-wrapper-text {
  font-size: 28rpx;
}
.images-list {
  display: flex;
  margin-top: 20rpx;
  flex-wrap: wrap;
}
.images-image {
  width: 150rpx;
  height: 150rpx;
  margin: 10rpx;
}
.images-round-button {
  display:inline-block;
  width: 55rpx;
  height: 55rpx;
  border-radius: 50rpx;
}
.image-plus {
  border: 1px dashed #d9d9d9;
  position: relative;
}
.image-plus-horizontal {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 4rpx;
  height: 50%;
  transform: translate(-50%, -50%);
}
.image-plus-vertical {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 50%;
  height: 4rpx;
  transform: translate(-50%, -50%);
}


/* Button */
button.clear-style {
    display:inline;
    padding:0;
    background-color:transparent;
}

button.clear-style::after {
    border: none;
}

